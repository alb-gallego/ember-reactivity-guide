<div class="flex items-center justify-center flex-col gap-4" open>
  <span>
    Replace render modifiers
  </span>

  <div class="flex items-center justify-center flex-col gap-4">
    <button
      class="border rounded-md border-blue-500 w-full bg-gray-500"
      type="button"
      {{on "click" this.onUpdate}}
    >
      UPDATE
    </button>

    <div class="h-full w-full max-w-2xl flex flex-col gap-4">
      <div
        class="bg-red-500 text-white text-center items-center justify-center flex flex-col"
        {{this.asyncUpdateModifierTask this.updatedVar}}
      >
        <span>TRACKED FUNCTION </span>
        {{#if this.asyncUpdateModifier.isLoading}}
          <svg
            class="size-5 animate-spin text-white"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          ><circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"
            ></circle><path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path></svg>
        {{else}}
          {{this.asyncUpdateModifier.value}}
        {{/if}}

      </div>
      <div
        class="bg-red-500 text-white text-center items-center justify-center flex flex-col"
        {{this.asyncUpdateModifierTask this.updatedVar}}
      >
        <span>EMBER CONCURRENCY</span>
        {{#if this.asyncTaskInstance.isRunning}}
          <svg
            class="size-5 animate-spin text-white"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          ><circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"
            ></circle><path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path></svg>
        {{else}}
          {{this.asyncTaskInstance.value}}
        {{/if}}

      </div>

    </div>
  </div>
</div>