{{! template-lint-disable no-nested-interactive }}
{{page-title "Ember Modifiers"}}

<div class="flex items-center justify-center flex-col gap-9">
  <h1 class="text-2xl mb-6">EMBER MODIFIERS</h1>
  <div class="flex gap-4">
    <div class="flex flex-col gap-2">
      <button
        {{on "click" (fn this.toggleSection "function-based")}}
        type="button"
        class="bg-blue-300 border rounded-md border-black p-3"
      >Function Based Modifiers Section
      </button>
      <button
        {{on "click" (fn this.toggleSection "class-based")}}
        type="button"
        class="bg-blue-300 border rounded-md border-black p-3"
      >Class Based Modifiers Section
      </button>
      <button
        {{on "click" (fn this.toggleSection "render-modifiers")}}
        type="button"
        class="bg-blue-300 border rounded-md border-black p-3"
      >Replace Render Modifiers Section
      </button>
      <button
        {{on "click" (fn this.toggleSection "bad-practices")}}
        type="button"
        class="bg-blue-300 border rounded-md border-black p-3"
      >Bad Practices Section
      </button>
    </div>
    <div>
      {{#if (get this.showSection "function-based")}}
        <FunctionModifiers />
      {{/if}}

      {{#if (get this.showSection "class-based")}}
        <ClassModifiers />
      {{/if}}

      {{#if (get this.showSection "render-modifiers")}}
        <ReplaceRenderModifiers />
      {{/if}}

      {{#if (get this.showSection "bad-practices")}}
        <BadPractices />
      {{/if}}
    </div>
  </div>
</div>